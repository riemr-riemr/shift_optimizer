<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.riemr.shift.infrastructure.mapper.AttendanceGroupMemberMapper">
  <resultMap id="BaseResultMap" type="io.github.riemr.shift.infrastructure.persistence.entity.AttendanceGroupMember">
    <id column="constraint_id" property="constraintId" />
    <id column="employee_code" property="employeeCode" />
  </resultMap>

  <select id="selectByConstraintIds" resultMap="BaseResultMap">
    select constraint_id, employee_code
    from attendance_group_member
    where constraint_id in
    <foreach collection="constraintIds" item="id" open="(" close=")" separator=",">
      #{id}
    </foreach>
    order by constraint_id, employee_code
  </select>

  <insert id="insertAll" parameterType="map">
    insert into attendance_group_member (constraint_id, employee_code)
    values
    <foreach collection="rows" item="row" separator=",">
      (#{row.constraintId}, #{row.employeeCode})
    </foreach>
  </insert>

  <delete id="deleteByConstraintId" parameterType="long">
    delete from attendance_group_member where constraint_id = #{constraintId}
  </delete>
</mapper>
